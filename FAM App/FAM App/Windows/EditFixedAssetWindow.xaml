<Window x:Class="FAM_App.Windows.EditFixedAssetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FAM_App.Windows"
        mc:Ignorable="d"
        Title="EditFixedAssetWindow" Height="720" Width="1728"
        WindowStartupLocation="CenterScreen"
        Background="#152238">
    <Window.Resources>
        <Style x:Key="darkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#dddddd"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Grid.Column" Value="3"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="310"/>
            <Setter Property="Height" Value="25"/>
        </Style>
        <Style x:Key="darkLabelEnter" TargetType="Label">
            <Setter Property="Foreground" Value="#dddddd"/>
            <Setter Property="Grid.Column" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style x:Key="darkLabelSelect" TargetType="Label">
            <Setter Property="Foreground" Value="#dddddd"/>
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style x:Key="darkCombobox" TargetType="ComboBox">
            <Setter Property="Grid.Column" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="25"/>
        </Style>
        <Style x:Key="darkDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="#dddddd"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Grid.Column" Value="3"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="310"/>
            <Setter Property="Height" Value="25"/>
        </Style>
        <Style x:Key="darkTextBlock" TargetType="TextBlock">
            <Setter Property="Background" Value="#dddddd"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="620"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
    </Window.Resources>
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        <Border x:Name="BorderPanel" BorderBrush="WhiteSmoke" BorderThickness="1"  
                Background="#152238" 
                Grid.Column="0" Grid.Row="1"/>

        <Border x:Name="BorderPage"  Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2">
                <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border x:Name="FixedAssets_Classification" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,40,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.4*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Grupa:" Grid.Column="0" Style="{StaticResource darkLabelSelect}"/>
                            <ComboBox Name="Group" Grid.Column="1" Style="{StaticResource darkCombobox}"
                                    Loaded="Group_Loaded"
                                  SelectionChanged="Group_SelectionChanged" IsEditable="True">
                            </ComboBox>

                            <Label Content="Podgrupa:" Grid.Column="2" Style="{StaticResource darkLabelSelect}"/>
                            <ComboBox Name="Subgroup" Grid.Column="3" Style="{StaticResource darkCombobox}"
                                  SelectionChanged="Subgroup_SelectionChanged"
                                  IsEnabled="False" IsEditable="True">
                            </ComboBox>

                            <Label Content="Rodzaj:" Grid.Column="4" Style="{StaticResource darkLabelSelect}"/>
                            <ComboBox Name="Type" Grid.Column="5" Style="{StaticResource darkCombobox}"
                                  SelectionChanged="Type_SelectionChanged" IsEditable="True"
                                  IsEnabled="False">
                            </ComboBox>
                        </Grid>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Produkt:" Grid.Row="2" Style="{StaticResource darkLabelSelect}"/>
                            <ComboBox Name="Product" Grid.Row="2" Style="{StaticResource darkCombobox}"
                          Loaded="Product_Loaded" IsEditable="True">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                <Run Text="{Binding Nazwa}"/>
                                <Run Text="{Binding Marka}"/>
                                <Run Text="{Binding Model}"/>
                                <Run Text="{Binding Rok_Produkcji}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Label Content="Dostawca:" Grid.Column="2" Style="{StaticResource darkLabelSelect}"/>
                            <ComboBox Name="Supplier" Grid.Column="3" Style="{StaticResource darkCombobox}"
                          Loaded="Supplier_Loaded" IsEditable="True">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                <Run Text="{Binding Nazwa}"/>
                                <Run Text="{Binding Miejscowosc}"/>
                                <Run Text="{Binding Kod_Pocztowy}"/>
                                <Run Text="{Binding Ulica}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </Border>
                    <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Adres:" Grid.Column="0" Style="{StaticResource darkLabelSelect}"/>
                            <ComboBox Name="Adress" Grid.Column="1" Style="{StaticResource darkCombobox}" 
                          Loaded="Adress_Loaded" IsEditable="True">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                <Run Text="{Binding Nazwa}"/>
                                <Run Text="{Binding Miejscowosc}"/>
                                <Run Text="{Binding Kod_Pocztowy}"/>
                                <Run Text="{Binding Ulica}"/>
                                <Run Text="{Binding Nr_Budynku}"/>
                                <Run Text="{Binding Nr_Lokalu}"/>
                                <Run Text="{Binding Nr_Pomieszczenia}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Label Content="Użytkownik" Grid.Column="2" Style="{StaticResource darkLabelSelect}"/>
                            <ComboBox Name="User" Grid.Column="3" Style="{StaticResource darkCombobox}"
                                  Loaded="User_Loaded" IsEditable="True">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                    <Run Text="{Binding Imie}"/>
                                    <Run Text="{Binding Nazwisko}"/>
                                    <Run Text="{Binding Email}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </Border>
                    <Label Content="Stan/Status:" Grid.Row="3" Style="{StaticResource darkLabelSelect}"/>
                    <ComboBox Name="Status" Grid.Row="3" Style="{StaticResource darkCombobox}">
                        <ComboBoxItem>Zlikwidowany</ComboBoxItem>
                        <ComboBoxItem>W użyciu</ComboBoxItem>
                    </ComboBox>

                    <Border x:Name="Depreciation" Grid.Row="4" Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label Content="Stawka amortyzacji:" Grid.Row="0" Style="{StaticResource darkLabelSelect}"/>
                            <TextBox x:Name="Depreciation_rate" Grid.Row="0" Style="{StaticResource darkTextBox}" MaxLength="2"/>

                            <Label Content="Sposób amortyzacji:" Grid.Row="1" Style="{StaticResource darkLabelSelect}"/>
                            <TextBox x:Name="Depreciation_method" Grid.Row="1" Style="{StaticResource darkTextBox}" IsEnabled="False"/>
                        </Grid>
                    </Border>


                    <Label Content="Data nabycia:" Grid.Row="0" Style="{StaticResource darkLabelEnter}"/>
                    <DatePicker Name="Date_of_aquisition" Grid.Row="0" Style="{StaticResource darkDatePicker}" />

                <Label Grid.Row="1" Style="{StaticResource darkLabelEnter}">
                    <TextBlock Text="Wartość początkowa brutto:" TextWrapping="Wrap"/>
                </Label>
                    <Border x:Name="Gross_orig_val" Grid.Row="1" Grid.Column="3" Margin="0,0,300,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.73*"/>
                                <ColumnDefinition Width="0.08*"/>
                                <ColumnDefinition Width="0.12*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="Gross_orig_val1_TxtBox" Grid.Column="0" 
                         Style="{StaticResource darkTextBox}" MaxLength="18"/>
                            <Label Content="," Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" Style="{StaticResource darkLabelEnter}"/>
                            <TextBox x:Name="Gross_orig_val2_TxtBox" Grid.Column="2"  
                         Style="{StaticResource darkTextBox}" Width="50" MaxLength="2"/>
                        </Grid>
                    </Border>

                <Label Grid.Row="2" Style="{StaticResource darkLabelEnter}" >
                    <TextBlock Text="Wartość początkowa netto:" TextWrapping="Wrap"/>
                </Label>
                    <Border x:Name="Net_orig_val1" Grid.Row="2" Grid.Column="3" Margin="0,0,300,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.73*"/>
                                <ColumnDefinition Width="0.08*"/>
                                <ColumnDefinition Width="0.12*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="Net_orig_val1_TxtBox" Grid.Column="0" 
                         Style="{StaticResource darkTextBox}" MaxLength="18"/>
                            <Label Content="," Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" Style="{StaticResource darkLabelEnter}"/>
                            <TextBox x:Name="Net_orig_val2_TxtBox" Grid.Column="2"  
                         Style="{StaticResource darkTextBox}" Width="50" MaxLength="2"/>
                        </Grid>
                    </Border>

                    <Label Content="Opis:" Grid.Row="3" Style="{StaticResource darkLabelEnter}" />
                    <TextBox x:Name="Description_TxtBox" Grid.Row="3" Height="75" Width="620"
                         TextWrapping="Wrap" MaxLength="300"
                         Style="{StaticResource darkTextBox}"/>

                    <Border x:Name="InvoiceBorder" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.3*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.15*"/>
                                <ColumnDefinition Width="0.1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label Content="Faktura:" Grid.Row="0" Style="{StaticResource darkLabelSelect}"/>
                            <TextBlock x:Name="Invoice" Grid.Column="1" Style="{StaticResource darkTextBlock}" >
                            </TextBlock>
                            <Border x:Name="InvoiceBorderButton" Grid.Column="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Button x:Name="AddInvoiveBox" Content="+" Grid.Column="0" Height="20" Width="20" FontWeight="Bold" FontSize="11" Click="AddInvoiveBox_Click"/>
                                    <Button x:Name="ClearInvoiveBox" Content="X" Grid.Column="1" Height="20" Width="20" FontSize="14"  Visibility="Hidden" FontFamily="Tahoma" FontWeight="Bold" Click="ClearInvoiveBox_Click" />
                                </Grid>
                            </Border>

                            <Label Content="Gwarancja:" Grid.Row="1"  Style="{StaticResource darkLabelSelect}"/>
                            <TextBox x:Name="Guarantee" Grid.Row="1" Grid.Column="1" Style="{StaticResource darkTextBox}"/>
                        </Grid>
                    </Border>
                <Border x:Name="Buttons" Grid.Row="5" Grid.Column="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="CancelButton" Content="Anuluj" Grid.Column="0"
                        Height="30" Width="150" FontFamily="Tahoma" 
                        FontSize="15" HorizontalAlignment="Right" Click="CancelButton_Click" />
                        
                        <Button x:Name="EditFixedAssetButton" Content="Zapisz" Grid.Column="1"
                        Height="30" Width="150" Margin="0,0,50,0" FontFamily="Tahoma" 
                        FontSize="15" HorizontalAlignment="Right" Click="EditFixedAssetButton_Click" />
                    </Grid>
                </Border>


                </Grid>
            </Border>
        </Grid>
</Window>
